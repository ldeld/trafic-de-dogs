<div class="main-container">
  <div class="flexbox">
    <!-- fix these lines so that the styling isnt in the html -->
    <div class="cards">
      <div class="row" style="width: 100%">
        <% @sitters.each do |sitter| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                           url('<%= image_path 'https://static3.shop033.com/resources/18/160536/picture/2E/85135150.jpg', height: 180, width: 370, crop: :fill %>')">
                <span class="card-category"><%= sitter.city %></span>
                <div class="card-title">
                  <h2> <%= sitter.first_name %> </h2>
                </div>
                <img class="card-user avatar avatar-large" src="http://www.qygjxz.com/data/out/190/6179593-profile-pics.jpg">
                <%= link_to "", sitter_path(sitter), class: "card-link" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <div id="map"></div>
  </div>
</div>

  <script>
      function initMap() {
        var uluru = {lat: -25.363, lng: 131.044};
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 8
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAvkGVkL4xF6Dpw4JzrVRoZzaF8UMYx5YE&callback=initMap">
  </script>

