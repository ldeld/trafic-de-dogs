<div class="container-user">
  <div class="row" >
    <div class= "header-show">
      <div class="col-xs-3 col-sm-3">
        <%= cl_image_tag current_user.photo, height: 150, width: 170, crop: :fill, gravity: :face %>
      </div>

      <div class="col-xs-3 col-sm-6">
        <div class="description-user">
          <h3 class="user-name">Hi, <%= current_user.first_name %> !</h3>
        </div>
      </div>

      <div class="col-xs-3 col-sm-3">
        <%= link_to "Edit", edit_user_registration_path, class: "btn btn-primary left-button" %>
      </div>
    </div>
  </div>

  <div class="row" >
    <div class= "profile-header">
      <div class="col-xs-3 col-sm-6">
        <h3>This is your profile</h3>
      </div>

      <div class="col-xs-3 col-sm-3">
        <div class="description-sitter">
          <% if current_user.type %>
            <div class="col-xs-3 col-sm-9">
              <%= image_tag "sitter.png", :class => "avatar-bordered" %>
              <p class="sitter-body"> You are a dog sitter </p>
            </div>
          <% else %>
          <div class="col-xs-3 col-sm-3">
            <%= link_to "Become a sitter", become_sitter_path, class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="border"></div>

  <div class="row" >
    <div class="profile-header ">
      <ul>
        <li> Name: <%= current_user.first_name %> <%= current_user.last_name %></li>
        <li> Address: <%= current_user.address %></li>
        <li> City: <%=  current_user.city %></li>
        <li> Accomodation: <%= current_user.accomodation %> </li>
        <li> Description: <%= current_user.description %> </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="photo-sitter">
      <% if current_user.type %>
        <div class="col-xs-3 col-sm-3">
          <%= simple_form_for(current_user) do |f| %>
          <div class="form-inputs">
            <%= f.input :photo_card, label: 'Your card photo'  %>
            <%= f.input :photo_card_cache, as: :hidden %>
          </div>
        </div>
          <div class="col-xs-3 col-sm-3">
            <%= f.submit "Add photo",class: "btn btn-primary left-button" %>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="border"></div>

  <div class="row">
    <div class= "profile-dogs">
      <div class="col-xs-3 col-sm-6">
        <h3>Your dogs</h3>
      </div>
    </div>
  </div>
  <div class="border"></div>

  <div class="row">
    <div class="show-dogs">
      <% current_user.dogs.each do |dog| %>
        <div class="col-xs-3 col-sm-2">
          <%= cl_image_tag dog.photo, height: 80, width: 80, crop: :thumb, gravity: :face %>
        </div>
        <div class="col-xs-3 col-sm-6">
          <div class="description-dog">
            <h4><%= dog.name %></h4>
            <p><%= dog.breed %></p>
            <p><%= dog.age %> ans </p>
            <%= link_to "Edit #{dog.name}'s", edit_dog_path(dog), class: "btn btn-primary btn-dog" %>
          </div>
        </div>
      <% end %>
      <div class="col-xs-3 col-sm-3">
        <%= link_to "Add a dog", new_dog_path, class: "btn btn-primary left-button" %>
      </div>
    </div>
  </div>

  <div class="border"></div>
</div>



